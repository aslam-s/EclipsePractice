package com.http;

import static io.restassured.RestAssured.given;
import static io.restassured.RestAssured.*;
import static io.restassured.matcher.RestAssuredMatchers.*;
import static org.hamcrest.Matchers.*;

import org.json.JSONObject;
import org.testng.annotations.Test;

import com.github.javafaker.Faker;

public class PutUser {
	@Test
	void post_test() {

		Faker f = new Faker();
		JSONObject data = new JSONObject();
		data.put("name", f.name().fullName());
		data.put("gender", "Female");
		data.put("email", f.internet().emailAddress());
		data.put("status", "active");
		int id = 0;

		String bt = "cc695d1c503f57f381f18d9932783192eddbbc72f3550fcbfd748f5ae4290479";
		int id = given().headers("Authorization", "Bearer " + bt).contentType("application/json").pathParam("id", id)
				.body(data.toString()).when().put("https://gorest.co.in/public/v2/users/{id}").jsonPath().getInt("id");

	}
}
